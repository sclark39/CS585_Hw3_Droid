<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">
<Button  
	android:text="@string/manage_create"
	android:layout_gravity="center" android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/CreateButton"></Button>	
	<Button 
	android:text="@string/manage_populate" 
	android:layout_height="wrap_content"
	android:layout_gravity="center" android:layout_weight="1" android:layout_width="fill_parent" android:id="@+id/PopulateButton"></Button>	
	<Button 
	android:text="@string/manage_drop" 
	android:layout_height="wrap_content" 
	android:layout_gravity="center" android:layout_weight="1" android:layout_width="fill_parent" android:id="@+id/DropButton">
	</Button>
</LinearLayout>
